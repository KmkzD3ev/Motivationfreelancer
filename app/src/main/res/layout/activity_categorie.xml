<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/bg_layout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CategorieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/x"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/HeadingText"
                android:layout_weight="1"
                android:text="Categorias"/>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbarSize="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/general"
                            android:layout_width="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_height="180dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/quotes"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_margin="12dp"
                                android:textColor="@color/black"
                                android:layout_gravity="bottom"
                                android:text="Geral"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:visibility="gone"
                                android:src="@drawable/lock_unlocked_01"
                                app:tint="@color/black" />


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/quotes"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fav"
                            android:layout_width="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_height="180dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/favorites" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_margin="12dp"
                                android:textColor="@color/black"
                                android:layout_gravity="bottom"
                                android:text="Favoritas "/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:visibility="gone"
                                android:src="@drawable/lock_unlocked_01"
                                app:tint="@color/black" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/own"
                            android:layout_width="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_height="180dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/my_own"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_margin="12dp"
                                android:textColor="@color/black"
                                android:layout_gravity="bottom"
                                android:text="Composiçoes"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:visibility="gone"
                                android:src="@drawable/lock_unlocked_01"
                                app:tint="@color/black" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/collection"
                            android:layout_width="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_height="180dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/my_collections"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_margin="12dp"
                                android:textColor="@color/black"
                                android:layout_gravity="bottom"
                                android:text="Minhas Coleçoes "/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:visibility="gone"
                                android:src="@drawable/lock_unlocked_01"
                                app:tint="@color/black" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:layout_width="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_marginEnd="15dp"
                            android:layout_height="180dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/new_beginnings"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_margin="12dp"
                                android:textColor="@color/black"
                                android:layout_gravity="bottom"
                                android:text="You are"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:src="@drawable/lock_unlocked_01"
                                app:tint="@color/black" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>